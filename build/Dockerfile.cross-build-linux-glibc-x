ARG TARGET_ARCH
FROM mcr.microsoft.com/dotnet/sdk:10.0.100-noble AS sdk
FROM --platform=linux/$TARGET_ARCH mcr.microsoft.com/dotnet/runtime-deps:10.0.0-noble AS sysroot-base

FROM sysroot-base AS sysroot
RUN apt-get update && apt-get install -y --no-install-recommends build-essential zlib1g-dev && apt-get clean

FROM sdk AS build
WORKDIR /src
RUN apt-get update && apt-get install -y --no-install-recommends clang make cmake lld llvm && apt-get clean
COPY --from=sysroot / /sysroot/

RUN mkdir /arbitrary_user_home && chmod a=rwx,o+t /arbitrary_user_home
ENV HOME=/arbitrary_user_home
ENTRYPOINT ["dotnet", "publish", "-p:CppCompilerAndLinker=clang", "-p:LinkerFlavor=lld", "-p:SysRoot=/sysroot"]
CMD []
